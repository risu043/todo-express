{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Language and Environment */
    "target": "es2021",
    "lib": ["es2021", "DOM"],
    "types": [
      "jest",
      "puppeteer",
      "jest-environment-puppeteer",
      "expect-puppeteer"
    ],

    /* Modules */
    "module": "commonjs",
    "rootDir": "../",
    "moduleResolution": "node",
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"],
      "@prisma/*": ["prisma/*"]
    },

    /* Emit */
    "noEmitOnError": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true
  },
  "include": ["__tests__/**/*", "jest-global.d.ts"]
}
